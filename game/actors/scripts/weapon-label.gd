"""
Provides real-time 'Actor' weapon information.
"""
extends Label

################################################################################
# VIRTUAL METHODS
################################################################################

func _ready():
	deactivate()

################################################################################
# PUBLIC METHODS
################################################################################

func activate():
	visible = true

#-------------------------------------------------------------------------------

func deactivate():
	visible = false

#-------------------------------------------------------------------------------

func update_label(weapon):
	text = '%s' % ItemDatabase.lookup_name(weapon.reference)

extends Button

# Button info
export (bool) var hide_on_ready = false

################################################################################
# VIRTUAL METHODS
################################################################################

func _ready():
	if hide_on_ready:
		hide_gui()

################################################################################
# PUBLIC METHODS
################################################################################

func activate():
	disabled = false

#-------------------------------------------------------------------------------

func deactivate():
	disabled = true

#-------------------------------------------------------------------------------

func hide_gui():
	visible = false

#-------------------------------------------------------------------------------

func show_gui():
	visible = true
